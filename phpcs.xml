<?xml version="1.0"?>
<ruleset name="Padrão de codifiçacão">
    <description>Baseado no padrão do Slim</description>

    <!-- Exibe a barra de progresso -->
    <arg value="p"/>
    <!-- Usa cores -->
    <arg name="colors"/>

    <!-- Regras: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Diretórios e arquivos a checar -->
    <file>app/</file>
    <file>framework/</file>
    <file>public/index.php</file>
</ruleset>
